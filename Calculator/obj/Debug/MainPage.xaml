        <Button x:ConnectionId='15' x:Name="btnMultiply" Content="*" HorizontalAlignment="Left" Margin="148,538,0,0" VerticalAlignment="Top" Height="70" Width="20"                       />
        <Button x:ConnectionId='16' x:Name="btnDivide" Content="/" HorizontalAlignment="Left" Margin="10,538,0,0" VerticalAlignment="Top" Height="70" Width="20"                       />

