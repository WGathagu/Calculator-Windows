    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:ConnectionId='1' x:Name="btnSeven" Content="7" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Height="70" Width="20"                       />
        <Button x:ConnectionId='2' x:Name="btnEight" Content="8" HorizontalAlignment="Left" Margin="148,217,0,0" VerticalAlignment="Top" Height="70" Width="20"                       />
        <Button x:ConnectionId='3' x:Name="btnNine" Content="9" HorizontalAlignment="Left" Margin="281,217,0,0" VerticalAlignment="Top" Height="70" Width="20"                      />
        <Button x:ConnectionId='4' x:Name="btnFour" Content="4" HorizontalAlignment="Left" Margin="10,294,0,0" VerticalAlignment="Top" Height="70" Width="20"                      />
        <Button x:ConnectionId='5' x:Name="btnFive" Content="5" HorizontalAlignment="Left" Margin="148,294,0,0" VerticalAlignment="Top" Height="70" Width="20"                      />
        <Button x:ConnectionId='6' x:Name="btnSix" Content="6" HorizontalAlignment="Left" Margin="281,294,0,0" VerticalAlignment="Top" Height="70" Width="20"                     />
